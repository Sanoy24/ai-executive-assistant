# .env.example - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT=your-project-id-here

# AI Service API Key
GEMINI_API_KEY=your-gemini-api-key-here

# Email Service API Key  
SENDGRID_API_KEY=your-sendgrid-api-key-here

# Email Configuration
FROM_EMAIL=assistant@yourcompany.com
FROM_NAME=AI Executive Assistant

# Google Credentials (Service Account JSON as single line)
# Get this from Google Cloud Console > IAM & Admin > Service Accounts
GOOGLE_CREDENTIALS_JSON={"type":"service_account","project_id":"..."}

# Application Configuration
PORT=8080
ENVIRONMENT=development

# Optional: Slack Integration (for urgent notifications)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Optional: Time Zone Configuration
DEFAULT_TIMEZONE=America/New_York

# Optional: Debug Mode
DEBUG=false